<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="400dip"
    android:layout_height="280dip"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/dialogname"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activitytitle_title"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_dialog_left"
            android:layout_marginTop="@dimen/login_dialog_top"
            android:hint="账号"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialognum"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_dialog_left"
            android:layout_marginTop="@dimen/login_dialog_top"
            android:hint="密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/activitytitle_sure"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/login_dialog_top"
        android:layout_marginLeft="@dimen/login_dialog_left2"
        android:background="@drawable/bg_event_detail_action_pressed"
        android:text="登录"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/activitytitle_cancel"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/login_dialog_top"
        android:layout_marginLeft="@dimen/login_dialog_left2"
        android:background="@drawable/btn_feed_attention_click"
        android:text="取消"
        android:textColor="@color/White" />

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_dialog_top"
            android:layout_marginBottom="@dimen/login_dialog_bottom"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="忘记密码"
            android:textColor="@color/Royalblue"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>