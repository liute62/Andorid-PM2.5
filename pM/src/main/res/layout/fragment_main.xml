<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/main_top_layout"
        style="@style/main_top_bg_style">

        <ImageView
            android:id="@+id/main_profile"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/bt_localsonglist_move_press" />

        <TextView
            android:id="@+id/textView1"
            style="@style/main_top_center_style"
            android:text="@string/main_top_title"/>

        <ImageView
            android:id="@+id/main_hot_map"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/ofm_location_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_info_layout"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@id/main_top_layout"
        android:layout_marginTop="20dip">

        <RelativeLayout
            android:id="@+id/main_info_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30"
                android:id="@+id/main_current_time"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_f_left"
                android:id="@+id/textView2"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_f_right"
                android:id="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_alignBaseline="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111sss"
                android:id="@+id/main_air_quality"
                android:layout_toRightOf="@+id/textView3"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_marginLeft="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_s_left"
                android:id="@+id/textView4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙"
                android:id="@+id/main_current_city"
                android:layout_toRightOf="@id/textView4"
                android:layout_alignBaseline="@id/textView4"
                android:layout_marginLeft="10dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_s_right"
                android:id="@+id/textView5"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignBaseline="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="易感人群"
                android:id="@+id/main_hint"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_marginLeft="20dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_info_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/main_info_layout_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_t_first"
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100mg"
                android:id="@+id/main_hour_pm"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:layout_marginLeft="40dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_t_second"
                android:id="@+id/textView7"
                android:layout_alignLeft="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000mg"
                android:id="@+id/main_day_pm"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignLeft="@+id/main_hour_pm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_top_t_third"
                android:id="@+id/textView8"
                android:layout_alignLeft="@+id/textView6"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000mg"
                android:id="@+id/main_week_pm"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignLeft="@+id/main_hour_pm" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_fig_layout_1"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_below="@id/main_info_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_fig_1_title"
            android:id="@+id/textView9"
            android:layout_marginLeft="20dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换"
            android:id="@+id/main_chart_1_change"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:layout_alignTop="@+id/textView9"
            android:textColor="@color/AccentBlue"
            android:textSize="20sp" />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/main_chart_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_chart_1_change" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_fig_layout_2"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_below="@+id/main_fig_layout_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_fig_2_title"
            android:layout_marginLeft="20dip"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换"
            android:id="@+id/main_chart_2_change"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:layout_alignTop="@+id/textView10"
            android:textColor="@color/AccentBlue"
            android:textSize="20sp" />

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/main_chart_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_chart_2_change" />

    </RelativeLayout>

</RelativeLayout>