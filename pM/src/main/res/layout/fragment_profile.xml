<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_background_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-100dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/shanghai" />

    <app.view.widget.PullScrollView
        android:id="@+id/profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerHeight="300dp"
        app:headerVisibleHeight="100dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/scroll_view_head"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="100dp"
                android:background="@color/transparent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/card_avatar_bar">

                    <TextView
                        android:id="@+id/personal_info_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="103dp"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="username"
                        android:textSize="12sp"
                        android:textColor="#A1A1A1" />

                    <TextView
                        android:id="@+id/personal_info_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/personal_info_username"
                        android:layout_marginLeft="103dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="gender"
                        android:textColor="#A1A1A1"
                        android:textSize="12sp" />


                    <Button
                        android:layout_width="80dip"
                        android:layout_height="50dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dip"
                        android:layout_marginRight="20dip"
                        android:id="@+id/profile_login"
                        android:textColor="@color/White"
                        android:text="登陆"
                        android:background="@drawable/main_top_bg" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="21dp"
                    android:background="@android:color/white"
                    android:contentDescription="@null"
                    android:padding="1px"
                    android:src="@drawable/avatar_default" />

                <TextView
                    android:id="@+id/personal_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_avatar"
                    android:layout_marginLeft="13dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="3.0"
                    android:shadowDy="3.0"
                    android:shadowRadius="5.0"
                    android:text="name"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

            <Button
                android:layout_marginTop="10dip"
                android:id="@+id/profile_rigister"
                style="@style/main_left_button_style"
                android:text="注册账户" />

            <Button
                android:id="@+id/profile_turnoff_upload"
                style="@style/main_left_button_style"
                android:text="关闭数据上传" />

            <Button
                android:id="@+id/profile_turnoff_service"
                style="@style/main_left_button_style"
                android:text="关闭后台服务" />

            <Button
                android:id="@+id/profile_clear_data"
                style="@style/main_left_button_style"
                android:text="清空本地数据" />

            <Button
                android:id="@+id/profile_modify_password"
                style="@style/main_left_button_style"
                android:text="修改密码" />

            <Button
                android:id="@+id/profile_bluetooth"
                style="@style/main_left_button_style"
                android:text="开启蓝牙" />

            <Button
                android:id="@+id/profile_logout"
                style="@style/main_left_button_style"
                android:text="退出登录" />

        </LinearLayout>
    </app.view.widget.PullScrollView>

</RelativeLayout>